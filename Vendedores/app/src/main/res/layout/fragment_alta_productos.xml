<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuProductos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AltaProductosFragment">

    <LinearLayout
        android:id="@+id/linerProducto"
        android:layout_width="364dp"
        android:layout_height="720dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nuevoProducto"
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:text="Nuevo Producto"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            app:errorEnabled="true" />

        <EditText
            android:id="@+id/cantidadDisponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad Disponible"
            android:inputType="textPersonName"
            app:errorEnabled="true" />

        <EditText
            android:id="@+id/productoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Precio"
            android:inputType="textPersonName"
            app:errorEnabled="true" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textColorHint="#A5A5A5"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#FFFFFF"
            app:expandedHintEnabled="false"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:hintTextColor="#DDDDDD">

            <AutoCompleteTextView
                android:id="@+id/atxt_categoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Categoria"
                android:inputType="none"
                android:text=""
                android:textIsSelectable="false"
                android:textSize="18sp"
                app:errorEnabled="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/addImagen"
            android:layout_width="86dp"
            android:layout_height="67dp" />

        <TextView
            android:id="@+id/addImagen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar imagen" />

        <EditText
            android:id="@+id/DescripcionProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agregar Descripcion"
            android:inputType="textPersonName"
            app:errorEnabled="true" />

        <Button
            android:id="@+id/btn_aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:text="Aceptar"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:backgroundTint="#494646"
            app:iconTint="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
