                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/direccion_envio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="32dp"
